<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <panda_equity>
            <kpis>
                <enabled>1</enabled>
            </kpis>
            <reports>
                <types>global,age,region,gender,attribute,country</types>
                <search>100</search>
            </reports>
            <twofactor>
                <allow_remember>1</allow_remember>
                <remember_days>30</remember_days>
            </twofactor>
        </panda_equity>
        <panda_magna>
            <customer>
                <enabled>1</enabled>
            </customer>
            <segments>
                <acl>0</acl>
                <refresh>1</refresh>
                <percentage>15</percentage>
                <recent>7</recent>
                <process>1000</process>
            </segments>
        </panda_magna>
        <panda_prices>
            <display>
                <prices>price</prices>
            </display>
            <segment_prices>
                <percentage>0</percentage>
            </segment_prices>
            <prices>
                <enabled>0</enabled>
                <customer_attribute>panda_product_prices</customer_attribute>
                <product_attribute>panda_product_prices</product_attribute>
            </prices>
        </panda_prices>
    </default>
</config>
