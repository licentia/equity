        <section id="panda_customer" type="text" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Customer Two Factor Authentication</label>
            <tab>licentia</tab>
            <resource>Licentia_Equity::config_magna</resource>
            <group id="twofactor" showInWebsite="1" showInStore="1" showInDefault="1" sortOrder="10">
                <label>General</label>
                <field id="enable" sortOrder="10" showInDefault="1" type="select" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>Two Factor Authentication</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                    <comment>Enable two factor authentication for customers</comment>
                </field>
                <field id="sender" sortOrder="15" showInDefault="1" type="select" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>SMS Sender</label>
                    <source_model>Licentia\Panda\Model\Source\SmsSenders</source_model>
                    <comment>Select the SMS sender for the SMS</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="customer_groups" sortOrder="20" showInDefault="1" type="multiselect" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>Customer Groups</label>
                    <source_model>Magento\Customer\Model\Config\Source\Group</source_model>
                    <comment>Enable Only for customers in the selected customer groups</comment>
                </field>
               <field id="segments" sortOrder="30" showInDefault="1" type="multiselect" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>Customer Segments</label>
                    <source_model>Licentia\Equity\Model\Source\Segments</source_model>
                    <comment>Enable Only for customers in selected segments</comment>
                </field>
                <field id="length" sortOrder="40" showInDefault="1" type="text" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>Code Length</label>
                    <validate>required-entry validate-digits validate-digits-range digits-range-4-20</validate>
                    <comment>Between 4 and 20</comment>
                </field>
                <field id="max_resends" sortOrder="50" showInDefault="1" type="text" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>New SMS code (30 mins)</label>
                    <comment>Max Times the Customer can ask for a new Message for 30mins</comment>
                    <validate>required-entry validate-digits</validate>
                </field>
                <field id="max_resends_day" sortOrder="60" showInDefault="1" type="text" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>New SMS code (day)</label>
                    <comment>Max Times the Customer can ask for a new Message in a day</comment>
                    <validate>required-entry validate-digits</validate>
                </field>
                <field id="message" sortOrder="70" showInDefault="1" type="textarea" showInStore="1" showInWebsite="1" translate="label comment">
                    <label>SMS Message</label>
                    <validate>required-entry</validate>
                    <comment>Variable {code} will be replaced with the actual code</comment>
